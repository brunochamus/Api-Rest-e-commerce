
<div class="container">
    <div style="padding: 80px"; class="row">
        {{#each cart}}
            <div class="card" style="width: 2000px;">
                <p style="text-align: left;" class="card-text"> Id: {{cart}}</p>
                <img style="mfloat: left; margin-right: 10px; width: 150px;" src="{{this.product.thumbnail}}" class="card-img-top" alt="...">
                <div class="card-body">


                    <h1 style="text-align: center; font-size:25px;" class="card-text"> {{this.title}}</h1>
                    <h2 style="text-align: center; font-size:20px;" class="card-text"> {{this.description}}</h2>
                    <h2 style="text-align: center; font-size:20px;" class="card-text"> $ {{this.price}}</h2>
                    <h2 style="color:rgb(0, 0, 0); text-align: center; font-size:20px;" class="card-text"> Quantity: {{this.Quantity}}</h2>

                    <h2 style="color:rgb(0, 0, 0); text-align: center; font-size:20px;" class="card-text"> Total: {{this.Quantity}}</h2>

                <div style="align-items: center; justify-content: space-between;">
                    <button id="deleteProduct" style="float: right; display: block; margin: 0 auto;" href="#" class="btn btn-danger">Delete</button>
                </div>
                </div>
            </div>
            {{/each}}
    </div>
